<Controls:MetroWindow x:Class="BookingHelper.UI.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:b="clr-namespace:Horizon.Framework.Xaml.Behaviors;assembly=Horizon.Framework"
                      xmlns:i="clr-namespace:Horizon.Framework.Xaml.Interaction;assembly=Horizon.Framework"
                      xmlns:vm="clr-namespace:BookingHelper.ViewModels"
                      x:Name="Root"
                      Title="Booking Helper v0.1"
                      Width="300"
                      Height="350"
                      MinWidth="280"
                      MinHeight="300"
                      x:ClassModifier="internal"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      SaveWindowPosition="True"
                      ShowIconOnTitleBar="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="BookingEntryTemplate" DataType="{x:Type vm:BookingModel}">
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                    <TextBox Width="45"
                             Margin="5"
                             VerticalContentAlignment="Center"
                             DockPanel.Dock="Left"
                             Text="{Binding StartTime,
                                            StringFormat=hh\\:mm}" />
                    <TextBlock VerticalAlignment="Center"
                               DockPanel.Dock="Left"
                               Text="-" />
                    <TextBox Width="45"
                             Margin="5"
                             VerticalContentAlignment="Center"
                             DockPanel.Dock="Left"
                             Text="{Binding EndTime,
                                            StringFormat=hh\\:mm}" />
                    <Button Width="30"
                            Height="30"
                            Margin="5"
                            Command="{Binding ElementName=Root,
                                              Path=DataContext.DeleteCommand}"
                            CommandParameter="{Binding .}"
                            DockPanel.Dock="Right"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="10"
                                   Height="10"
                                   Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                            </Rectangle.OpacityMask>

                        </Rectangle>
                    </Button>
                    <TextBox Margin="5"
                             HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             Text="{Binding Description,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=LostFocus}" />
                </DockPanel>
            </DataTemplate>
        </ResourceDictionary>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0"
                      Grid.RowSpan="2"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Visible">
            <StackPanel>
                <ItemsControl ItemTemplate="{StaticResource BookingEntryTemplate}" ItemsSource="{Binding BookingContainer}" />
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                    <TextBox Width="45"
                             Margin="5"
                             VerticalContentAlignment="Center"
                             Controls:TextBoxHelper.Watermark="00:00"
                             DockPanel.Dock="Left"
                             GotFocus="PrefillWithCurrentTimeIfEmpty"
                             Text="{Binding CurrentBooking.StartTime,
                                            StringFormat=hh\\:mm,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock VerticalAlignment="Center"
                               DockPanel.Dock="Left"
                               Text="-" />
                    <TextBox Width="45"
                             Margin="5"
                             VerticalContentAlignment="Center"
                             Controls:TextBoxHelper.Watermark="00:00"
                             DockPanel.Dock="Left"
                             GotFocus="PrefillWithCurrentTimeIfEmpty"
                             Text="{Binding CurrentBooking.EndTime,
                                            StringFormat=hh\\:mm,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <Button Width="30"
                            Height="30"
                            Margin="5"
                            Command="{Binding SaveCommand}"
                            DockPanel.Dock="Right"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="10"
                                   Height="10"
                                   Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                            </Rectangle.OpacityMask>

                        </Rectangle>
                    </Button>
                    <TextBox Margin="5"
                             HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             Controls:TextBoxHelper.Watermark="Description"
                             Text="{Binding CurrentBooking.Description,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SaveCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </DockPanel>
            </StackPanel>
            <i:Attach.Behaviors>
                <b:AutoScrollBehavior />
            </i:Attach.Behaviors>
        </ScrollViewer>
        <ScrollViewer Grid.Row="2"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Visible">
            <StackPanel Margin="5" Orientation="Vertical">
                <TextBlock Text="Bookings:" />
                <DataGrid HorizontalAlignment="Stretch"
                          AutoGenerateColumns="False"
                          HeadersVisibility="None"
                          IsReadOnly="True"
                          ItemsSource="{Binding Efforts}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding EffortTimeInHours, StringFormat='{}{0:N2} h'}" />
                        <DataGridTextColumn Binding="{Binding Description}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="3"
                   Margin="0 5 15 5"
                   HorizontalAlignment="Stretch">
            <DatePicker BorderThickness="0"
                        DockPanel.Dock="Left"
                        SelectedDate="{Binding SelectedDate}" />
            <TextBlock VerticalAlignment="Center"
                       DockPanel.Dock="Right"
                       Text="{Binding TotalEffortToday,
                                      StringFormat='{}{0:N2} h'}"
                       TextAlignment="Right" />
        </DockPanel>
    </Grid>
</Controls:MetroWindow>